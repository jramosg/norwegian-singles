---
import { getSavedLocale } from "../lib/storage";

// Redirect to default locale
// Client-side will check for saved preference
---

<script is:inline>
	(function () {
		const savedLocale = localStorage.getItem("ns-locale");
		const targetLocale = savedLocale || "es";
		window.location.replace("/" + targetLocale);
	})();
</script>

<meta http-equiv="refresh" content="0;url=/es" />
