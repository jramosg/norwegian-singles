---
import AppLayout from '../../layouts/AppLayout.astro';
import TrainingForm from '../../components/react/TrainingForm';
import MethodologySection from '../../components/MethodologySection.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'en';
const t = useTranslations(locale);

const formTranslations = {
  title: t('form.title'),
  targetDistance: t('form.targetDistance'),
  time5K: t('form.time5K'),
  time10K: t('form.time10K'),
  timePlaceholder: t('form.timePlaceholder'),
  timeHint: t('form.timeHint'),
  trainingDays: t('form.trainingDays'),
  trainingDaysHint: t('form.trainingDaysHint'),
  daysPerWeek: t('form.daysPerWeek'),
  previewThreshold: t('form.previewThreshold'),
  previewEasy: t('form.previewEasy'),
  submit: t('form.submit'),
  validationRequired: t('form.validation.required'),
  validationFormat: t('form.validation.format'),
  distance5K: t('distance.5K'),
  distance10K: t('distance.10K'),
  distance21K: t('distance.21K'),
  distance42K: t('distance.42K'),
};
---

<AppLayout
  title={t('seo.title')}
  description={t('seo.description')}
  locale={locale}
>
  <div class="landing">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">
            {t('hero.title')}
            <span class="hero-accent">{t('hero.titleAccent')}</span>
          </h1>
          <p class="hero-subtitle">{t('hero.subtitle')}</p>
        </div>

        <!-- Form Card -->
        <div class="form-card card glass">
          <div class="card-header">
            <h2 class="card-title">{t('form.title')}</h2>
          </div>
          <div class="card-body">
            <TrainingForm
              locale={locale}
              translations={formTranslations}
              client:load
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Methodology Section -->
    <MethodologySection locale={locale} />
  </div>
</AppLayout>

<style>
  .landing {
    background: var(--color-bg-primary);
  }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: var(--space-8) 0;
  }

  .hero .container {
    display: grid;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-content {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  .hero-title {
    font-size: var(--text-4xl);
    line-height: 1.1;
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: var(--text-5xl);
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: var(--text-6xl);
    }
  }

  .hero-accent {
    background: var(--color-accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      margin: 0;
    }
  }

  .form-card {
    max-width: 520px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .form-card {
      margin: 0;
    }
  }
</style>
